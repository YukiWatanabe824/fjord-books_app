<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <% if @report.user.name == "" %>
    <td><%= @report.user.email %></td>
  <% else %>
    <td><%= @report.user.name %></td>
  <% end %>
</p>

<p>
  <strong>Title:</strong>
  <%= @report.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @report.content %>
</p>

<% if current_user.id == @report.user_id %>
  <%= link_to 'Edit', edit_report_path(@report) %> |
<% end %>
<%= link_to 'Back', reports_path %>
