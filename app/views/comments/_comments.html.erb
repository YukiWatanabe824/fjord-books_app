<h2><%= Comment.model_name.human %></h2>
<table>
  <thead>
    <tr>
      <th><%= Comment.human_attribute_name(:user) %></th>
      <th><%= Comment.human_attribute_name(:content) %></th>
      <th><%= Comment.human_attribute_name(:posted_time) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% comments.each do |comment| %>
      <tr>
        <td><%= comment.user.name_or_email %></td>
        <td><%= comment.content %></td>
        <% if comment.created_at < comment.updated_at %>
          <td><%= comment.updated_at %></td>
        <% else %>
          <td><%= comment.created_at %></td>
        <% end %>
        <td><%= link_to t('views.common.show'), [commentable, comment] %></td>
        <td><%= link_to t('views.common.destroy'), [commentable, comment], method: :delete, data: { confirm: t('views.common.delete_confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
