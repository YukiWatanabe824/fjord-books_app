<p id="notice"><%= notice %></p>

<h1><%= t('views.common.user_list') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('views.user.id') %></th>
      <th><%= t('views.user.name') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= link_to t('views.common.show'), user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div>
<%= paginate @users %>
</div>

<br>

