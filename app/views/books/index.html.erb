<p id="notice"><%= notice %></p>

<h1><%= t('book_app.main_title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('book_app.book_title') %></th>
      <th><%= t('book_app.memo') %></th>
      <th><%= t('book_app.author') %></th>
      <th><%= t('book_app.picture') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to t('book_app.show'), book %></td>
        <td><%= link_to t('book_app.edit'), edit_book_path(book) %></td>
        <td><%= link_to t('book_app.destroy'), book, method: :delete, data: { confirm: t('book_app.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('book_app.new_book'), new_book_path %>
