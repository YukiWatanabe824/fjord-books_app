<p id="notice"><%= notice %></p>

<h1><%= t('translate.main_title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('translate.book_title') %></th>
      <th><%= t('translate.memo') %></th>
      <th><%= t('translate.author') %></th>
      <th><%= t('translate.picture') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to t('translate.show'), book %></td>
        <td><%= link_to t('translate.edit'), edit_book_path(book) %></td>
        <td><%= link_to t('translate.destroy'), book, method: :delete, data: { confirm: t('translate.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('translate.new_book'), new_book_path %>
